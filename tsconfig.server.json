{
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules/*"
    ],
    "compilerOptions": {
        "baseUrl": ".",
        "target": "ESNEXT",
        "module": "ESNEXT",
        "sourceMap": true,
        "strict": true,
        "noImplicitAny": true,
        "moduleResolution": "node",
        "types": [
            "node"
        ],
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true
    }
}